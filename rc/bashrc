# If not running interactively, don't do anything
[[ $- != *i* ]] && return

function loadSource {
    FILE=$@

    if [ -f "${FILE}" ]; then
        source "${FILE}"
    fi
}

shopt -s histappend # Append to the Bash history, don't overwrite it

loadSource ~/.shell_vars
loadSource ~/.shell_aliases
loadSource ~/.shell_prompt

[ -f "/usr/share/blesh/ble.sh" ] && source "/usr/share/blesh/ble.sh"
