#!/bin/bash
# If not running interactively, don't do anything
[[ $- != *i* ]] && return

function loadSource {
    FILE="${*}"

    if [ -f "${FILE}" ]; then
        source "${FILE}"
    fi
}

loadSource ~/.shell_vars
loadSource ~/.shell_aliases
loadSource ~/.shell_prompt
loadSource ~/.shell_opts

loadSource "/usr/share/blesh/ble.sh"
loadSource "/usr/share/doc/pkgfile/command-not-found.bash"
